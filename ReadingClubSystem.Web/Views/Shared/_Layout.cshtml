<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReadingClubSystem</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Estilos básicos para una apariencia más atractiva */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            background-color: #f0f8ff;
            color: #333;
        }

        header {
            background-color: #007bff;
            padding: 10px 20px;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 15px;
        }

        nav a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            nav a:hover {
                background-color: #0056b3;
            }

        .sidebar {
            background-color: #e3f2fd;
            padding: 15px;
            width: 220px;
            position: fixed;
            top: 60px;
            bottom: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar h2 {
                color: #333;
            }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin-bottom: 10px;
                }

                    .sidebar ul li a {
                        color: #007bff;
                        text-decoration: none;
                        padding: 8px;
                        display: block;
                        border-radius: 5px;
                        transition: background-color 0.3s;
                    }

                        .sidebar ul li a:hover {
                            background-color: #d0e3f0;
                        }

        .container {
            margin-left: 240px; /* Espacio para la barra lateral */
            padding: 20px;
            flex: 1;
        }

        footer {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: relative;
            bottom: 0;
            width: 100%;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #333;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
            }

            .table tbody + tbody {
                border-top: 2px solid #dee2e6;
            }

            .table .table {
                background-color: #fff;
            }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
            </ul>
        </nav>
    </header>
    <div class="sidebar">
        <h2>Menú</h2>
        <ul>
            <li><a asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
            <li><a asp-area="" asp-controller="Club" asp-action="Index">Clubes</a></li>
            <li><a asp-area="" asp-controller="Libro" asp-action="Index">Libros</a></li>
            <li><a asp-area="" asp-controller="Reunion" asp-action="Index">Reuniones</a></li>
            <li><a asp-area="" asp-controller="Recomendacion" asp-action="Index">Recomendaciones</a></li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <p>&copy; 2024 - ReadingClubSystem</p>
    </footer>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
